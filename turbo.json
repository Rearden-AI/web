{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NEXT_PUBLIC_API_URL", "NEXTAUTH_SECRET", "NEXTAUTH_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "cache": false
    },
    "//#format:prettier": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "//#lint:prettier": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["//#lint:prettier"],
      "inputs": ["**/*.ts", "**/*.tsx", "package.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false,
      "dependsOn": ["format:ts"]
    },
    "format:ts": {
      "cache": false,
      "dependsOn": ["//#format:prettier"]
    }
  }
}
