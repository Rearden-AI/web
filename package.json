{
  "name": "rearden",
  "version": "0.1.0",
  "private": false,
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "all-check": "pnpm clean && pnpm install && pnpm lint && pnpm build",
    "clean": "turbo clean",
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "turbo format",
    "format:prettier": "prettier --write .",
    "lint": "turbo lint -- --max-warnings 0",
    "lint:fix": "turbo lint -- --fix",
    "lint:prettier": "prettier --check .",
    "test": "turbo test"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "tailwindcss": "^3.4.3",
    "tsconfig": "workspace:*",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "@rearden/eslint-config": "workspace:*",
    "@rearden/tailwind-config": "workspace:*"
  }
}
